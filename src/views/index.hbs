<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Órdenes de Venta y Detalles</h3>

        {{#if ordenes}}
        <table class="table table-striped table-hover text-center align-middle">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-2">Nro. Orden</th>
                    <th scope="col" class="col-3">Fecha Emisión</th>
                    <th scope="col" class="col-2">Total</th>
                    <th scope="col" class="col-2">Situación</th>
                    <th scope="col" class="col-3">Detalles</th>
                </tr>
            </thead>
            <tbody>
                {{#each ordenes}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{fechaEmision}}</td>
                    <td>{{Total}}</td>
                    <td>{{Situacion}}</td>
                    <td>
                        <!-- Botón para colapsar detalles -->
                        <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#detalles-{{id}}" aria-expanded="false" aria-controls="detalles-{{id}}">
                            Ver Detalles
                        </button>
                    </td>
                </tr>
                <tr>
                    <td colspan="5">
                        <!-- Tabla colapsable de detalles -->
                        <div class="collapse" id="detalles-{{id}}">
                            <div class="card card-body">
                                <table class="table table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">Cod. Medicamento</th>
                                            <th scope="col">Descripción</th>
                                            <th scope="col">Cantidad</th>
                                            <th scope="col">Precio Unitario</th>
                                            <th scope="col">Monto</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each detalles}}
                                        <tr>
                                            <td>{{CodMedicamento}}</td>
                                            <td>{{descripcion}}</td>
                                            <td>{{cantidad}}</td>
                                            <td>{{precio}}</td>
                                            <td>{{montouni}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="5">ÓRDENES Y DETALLES DE VENTA</td>
                </tr>
            </tfoot>
        </table>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>No hay órdenes registradas</h3>
            </div>
            <div class="card-body">
                <p>Presiona este botón para registrar una nueva orden.</p>
                <a href="#" class="btn btn-primary">Crear Orden</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>
